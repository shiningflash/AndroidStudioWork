            <TextView
                android:text=""
                style="@style/TableValue1"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="12:30 - 02:00"
                android:layout_weight="2"
                style="@style/TableHeader1"/>

            <TextView
                android:text=""
