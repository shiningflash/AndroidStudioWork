                style="@style/TableValue"/>

            <TextView
                android:text=""
                style="@style/TableValue"/>

            <TextView
                android:text=""
                style="@style/TableValue"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="02:00 - 03:20"
                android:layout_weight="2"
                style="@style/TableHeader"/>

            <TextView
