<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".SignupActivity">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#21327E">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Registration"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#FFFFFF"/>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:visibility="gone"
            />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="60dp"
        android:layout_marginHorizontal="40dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:src="@drawable/bracu_logo"/>

        <Button
            android:id="@+id/appLebel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Tutor Management"
            android:textColor="#240202"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:background="@android:color/transparent" />

        <EditText
            android:id="@+id/email_id"
            style="@style/MyEditTextStyle"
            android:hint="Enter email (provided by BRACU)*"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/password"
            style="@style/MyEditTextStyle"
            android:hint="Enter password*"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/repeat_password"
            style="@style/MyEditTextStyle"
            android:hint="Enter repeat password*"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/full_name"
            style="@style/MyEditTextStyle"
            android:inputType="textPersonName"
            android:hint="Enter full name*" />

        <EditText
            android:id="@+id/contact_no"
            style="@style/MyEditTextStyle"
            android:inputType="textPersonName"
            android:hint="Enter Contact no." />

        <Spinner
            android:id="@+id/department"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15sp"
            android:entries="@array/department_name"
            android:prompt="@string/department_name"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="7dp"
            android:text="Register"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textSize="15sp"
            android:background="@color/register_button"
            android:textColor="#FFFFFF"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="480dp"
        android:layout_marginHorizontal="67dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Have an account? "/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:text="login page"
            android:textSize="16sp"
            android:textAllCaps="false"
            android:textColor="#4CAF50"
            android:background="@android:color/transparent"
            />

    </LinearLayout>

</RelativeLayout>